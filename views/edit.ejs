<%- include('./partials/header.ejs') %>
<main>
  <h2>Update Event</h2>
  <form method="POST" action="#">
    <div>
      <label for="category">Category</label>
      <select name="category" id="category" required>
        <option value="">--Select a category--</option>
        <option value="1">Meetup</option>
        <option value="2">Trip</option>
        <option value="3">Workshop</option>
        <option value="4">Surprise Guest</option>
        <option value="5">Other</option>
      </select>
    </div>
    <div>
      <label for="title">Title</label>
      <input type="text" placeholder="Title" id="title" required />
    </div>
    <div>
      <label for="details">Details</label>
      <input type="text" placeholder="Description" id="details" required />
    </div>
    <div>
      <label for="where">Where</label>
      <input type="text" placeholder="Location" id="where" required />
    </div>
    <div>
      <label for="start">Start</label>
      <input type="datetime-local" id="start" required />
    </div>
    <div>
      <label for="end">End</label>
      <input type="datetime-local" id="end" required />
    </div>
    <div>
      <label for="image">Image</label>
      <input type="file" id="image" required />
    </div>
    <button id="submitBtn">Submit</button>
  </form>
</main>
<%- include('partials/footer') %>
